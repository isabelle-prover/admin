ISABELLE_CI_PROPERTIES=/etc/isabelle/ci.properties

init_components "$ISABELLE_HOME_USER/contrib" "$ISABELLE_HOME/Admin/components/main"
init_components "$ISABELLE_HOME_USER/contrib" "$ISABELLE_HOME/Admin/components/cakeml"
init_components "$ISABELLE_HOME_USER/contrib" "$ISABELLE_HOME/Admin/components/ci-extras"
init_component "$ISABELLE_HOME/Admin/jenkins/build"
[ -d "$ISABELLE_HOME/afp" ] && init_component "$ISABELLE_HOME/afp/thys"
[ -d "$ISABELLE_HOME/afp" ] && init_component "$ISABELLE_HOME/afp/admin/jenkins"
[ -d "$ISABELLE_HOME/isabelle-context-build" ] && init_component "$ISABELLE_HOME/isabelle-context-build"

ISABELLE_POLYML="$ML_HOME/poly"
ISABELLE_SCALA="$SCALA_HOME/bin"
ISABELLE_SWIPL=swipl
ISABELLE_SMLNJ=sml

ISABELLE_CC=gcc
ISABELLE_HEAPS=/media/isabelle-cluster/heaps
ISABELLE_BROWSER_INFO=/media/isabelle-cluster/browser_info
ISABELLE_BUILD_OPTIONS="$ISABELLE_BUILD_OPTIONS build_database_server build_database_user=isabelle build_database_password={{ config.slurm.db_password }} build_database_name=isabelle_cluster build_database_host={{ groups['slurm_master'][0] }} build_database_port=5432"